############################################################################################
# Defines
############################################################################################

OUTPUT_DIR = $(CURDIR)/Output
OBJ_DIR    = $(CURDIR)/Tmp/Obj
SRC_DIR    = $(CURDIR)/Code

CC_ERR_FORMAT_SCRIPT = CompilerErrorFormater.py
LD_SCRIPT            = $(SRC_DIR)/Memory_Map.ld

############################################################################################
# Toolchain
############################################################################################

TOOLCHAIN = riscv64-unknown-elf

CC        = $(TOOLCHAIN)-g++
CPPFILT   = $(TOOLCHAIN)-c++filt
LD        = $(TOOLCHAIN)-g++
NM        = $(TOOLCHAIN)-nm
OBJDUMP   = $(TOOLCHAIN)-objdump
OBJCOPY   = $(TOOLCHAIN)-objcopy
READELF   = $(TOOLCHAIN)-readelf

PYTHON    = python3

############################################################################################
# Optimization Compiler flags
############################################################################################

OPT_MODIFIED_O2 = -Os                                                  \
                  -fno-reorder-blocks-and-partition                    \
                  -fno-reorder-functions

NO_OPT          = -O0

OPT = $(NO_OPT)

############################################################################################
# C Compiler flags
############################################################################################

OPS_BASE     = -Wall                                          \
               -Wextra                                        \
               -Wpedantic                                     \
               -Wconversion                                   \
               -Wsign-conversion                              \
               -Wshadow                                       \
               -Wno-variadic-macros                           \
               $(OPT)                                         \
               -mcpu=sifive-e31                               \
               -mabi=ilp32                                    \
               -march=rv32imac                                \
               -msmall-data-limit=0                           \
               -Wa,-adhln=$(OBJ_DIR)/$(basename $(@F)).lst    \
               -g3                                            \
               -falign-functions=4                            \
               -fomit-frame-pointer                           \
               -ffast-math                                    \
               -fno-exceptions                                \
               -gdwarf-2

COPS         = -x c                                           \
               -fno-inline-functions                          \
               $(OPS_BASE)                                    \
               -std=c99

############################################################################################
# C++ Compiler flags
############################################################################################

CPPOPS       = -x c++                                         \
               -fno-inline-functions                          \
               $(OPS_BASE)                                    \
               -std=c++14                                     \
               -fno-rtti                                      \
               -fno-use-cxa-atexit                            \
               -fno-nonansi-builtins                          \
               -fno-threadsafe-statics                        \
               -fno-enforce-eh-specs                         \
               -ftemplate-depth=128                          \
               -Wzero-as-null-pointer-constant

############################################################################################
# Assembler flags
############################################################################################

ASOPS        = -x assembler                                   \
               $(OPS_BASE)

############################################################################################
# Linker flags
############################################################################################

LOPS         = -x none                                              \
               -nostartfiles                                        \
               -nostdlib                                            \
               -specs=nano.specs                                    \
               -specs=nosys.specs                                   \
               -e Startup_Init                                      \
               $(OPS_BASE)                                          \
               -Wl,--print-memory-usage                             \
               -Wl,-Map,$(OUTPUT_DIR)/Osek_pi_crunch_cm3.map        \
               -T $(LD_SCRIPT)

############################################################################################
# Source Files
############################################################################################

SRC_FILES :=  $(SRC_DIR)/pi_spigot/pi_spigot                                              \
              $(SRC_DIR)/ref_app/target/micros/riscvfe310/startup/crt0                    \
              $(SRC_DIR)/ref_app/target/micros/riscvfe310/startup/crt0_init_ram           \
              $(SRC_DIR)/ref_app/target/micros/riscvfe310/startup/crt1                    \
              $(SRC_DIR)/ref_app/src/mcal/mcal_gcc_cxx_completion                         \
              $(SRC_DIR)/ref_app/src/mcal/riscvfe310/mcal_led                             \
              $(SRC_DIR)/Mcal/mtimer                                                      \
              $(SRC_DIR)/Mcal/Clock                                                       \
              $(SRC_DIR)/Mcal/Mcu                                                         \
              $(SRC_DIR)/Startup/boot                                                     \
              $(SRC_DIR)/Startup/intvect                                                  \
              $(SRC_DIR)/Startup/Startup                                                  \
              $(SRC_DIR)/main                                                             \
              $(SRC_DIR)/tasks                                                            \
              $(SRC_DIR)/OSEK/HwPlatform/RISC-V/OsSwClz                                   \
              $(SRC_DIR)/OSEK/HwPlatform/RISC-V/OsAsm                                     \
              $(SRC_DIR)/OSEK/HwPlatform/RISC-V/OsHwSchedPrio                             \
              $(SRC_DIR)/OSEK/HwPlatform/RISC-V/OsHwPltfm                                 \
              $(SRC_DIR)/OSEK/HwPlatform/RISC-V/OsDummy                                   \
              $(SRC_DIR)/OSEK/OsAlarm                                                     \
              $(SRC_DIR)/OSEK/OsCore                                                      \
              $(SRC_DIR)/OSEK/OsEvt                                                       \
              $(SRC_DIR)/OSEK/OsSched                                                     \
              $(SRC_DIR)/OSEK/OsTask                                                      \
              $(SRC_DIR)/OSEK/OsTcb

############################################################################################
# Include Paths
############################################################################################
INC_FILES :=  $(SRC_DIR)/OSEK/HwPlatform/RISC-V          \
              $(SRC_DIR)/OSEK                            \
              $(SRC_DIR)/Mcal                            \
              $(SRC_DIR)/ref_app/src/mcal/riscvfe310     \
              $(SRC_DIR)/ref_app/src                     \
              $(SRC_DIR)

############################################################################################
# Rules
############################################################################################

VPATH := $(subst \,/,$(sort $(dir $(SRC_FILES)) $(OBJ_DIR)))

FILES_O := $(addprefix $(OBJ_DIR)/, $(notdir $(addsuffix .o, $(SRC_FILES))))


ifeq ($(MAKECMDGOALS),build)
-include $(subst .o,.d,$(FILES_O))
endif

build : clean $(OUTPUT_DIR)/Osek_pi_crunch_riscv.elf

all : clean $(OUTPUT_DIR)/Osek_pi_crunch_riscv.elf


.PHONY : clean
clean :
	@-rm -f $(OBJ_DIR)/*.o            2>/dev/null || true
	@-rm -f $(OBJ_DIR)/*.err          2>/dev/null || true
	@-rm -f $(OUTPUT_DIR)/kernel.img  2>/dev/null || true
	@-rm -f $(OUTPUT_DIR)/*.hex       2>/dev/null || true
	@-rm -f $(OUTPUT_DIR)/*.elf       2>/dev/null || true
	@-rm -f $(OUTPUT_DIR)/*.list      2>/dev/null || true
	@-rm -f $(OUTPUT_DIR)/*.map       2>/dev/null || true
	@-rm -f $(OUTPUT_DIR)/*.txt       2>/dev/null || true
	@-mkdir -p $(OBJ_DIR)
	@-mkdir -p $(OUTPUT_DIR)

$(OBJ_DIR)/%.o : %.c
	@-echo +++ compile: $(subst \,/,$<) to $(subst \,/,$@)
	@-$(CC) $(COPS) $(addprefix -I, $(INC_FILES)) -c $< -o $(OBJ_DIR)/$(basename $(@F)).o 2> $(OBJ_DIR)/$(basename $(@F)).err
	@-$(PYTHON) $(CC_ERR_FORMAT_SCRIPT) $(OBJ_DIR)/$(basename $(@F)).err -COLOR

$(OBJ_DIR)/%.o : %.s
	@-echo +++ compile: $(subst \,/,$<) to $(subst \,/,$@)
	@-$(CC) $(ASOPS) -c $< -o $(OBJ_DIR)/$(basename $(@F)).o 2> $(OBJ_DIR)/$(basename $(@F)).err >$(OBJ_DIR)/$(basename $(@F)).lst
	@-$(PYTHON) $(CC_ERR_FORMAT_SCRIPT) $(OBJ_DIR)/$(basename $(@F)).err -COLOR

$(OBJ_DIR)/%.o : %.asm
	@-echo +++ compile: $(subst \,/,$<) to $(subst \,/,$@)
	@-$(CC) -E -P $(addprefix -I, $(INC_FILES)) -x c $< > $(OBJ_DIR)/$(basename $(@F)).asm.pre
	@-$(CC) $(ASOPS) $(addprefix -I, $(INC_FILES)) -c $(OBJ_DIR)/$(basename $(@F)).asm.pre -o $(OBJ_DIR)/$(basename $(@F)).o 2> $(OBJ_DIR)/$(basename $(@F)).err
	@-$(PYTHON) $(CC_ERR_FORMAT_SCRIPT) $(OBJ_DIR)/$(basename $(@F)).err -COLOR

$(OBJ_DIR)/%.o : %.cpp
	@-echo +++ compile: $(subst \,/,$<) to $(subst \,/,$@)
	@$(CC) $(CPPOPS) $(addprefix -I, $(INC_FILES)) -c $< -o $(OBJ_DIR)/$(basename $(@F)).o 2> $(OBJ_DIR)/$(basename $(@F)).err
	@-$(PYTHON) $(CC_ERR_FORMAT_SCRIPT) $(OBJ_DIR)/$(basename $(@F)).err -COLOR

$(OUTPUT_DIR)/Osek_pi_crunch_riscv.elf : $(FILES_O)
	@$(LD) $(LOPS) $(FILES_O) -o $(OUTPUT_DIR)/Osek_pi_crunch_riscv.elf
	@$(OBJCOPY) $(OUTPUT_DIR)/Osek_pi_crunch_riscv.elf -O ihex $(OUTPUT_DIR)/Osek_pi_crunch_riscv.hex
	@$(NM) --numeric-sort --print-size $(OUTPUT_DIR)/Osek_pi_crunch_riscv.elf | $(CPPFILT) > $(OUTPUT_DIR)/OSEK_cppfilt.txt
